<Window
   x:Class="Kopfnicken.WndMIDIDeviceSelection"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="MIDI Device Selection"
   Height="325"
   Width="229"
   Name="_wndMIDIDevSel"
   ResizeMode="NoResize"
   ShowInTaskbar="False"
   WindowStartupLocation="CenterOwner">
   <Grid>
      <Button
         Content="Select"
         Height="36"
         HorizontalAlignment="Right"
         Margin="0,0,12,12"
         Name="_btnSelect"
         VerticalAlignment="Bottom"
         Width="90"
         Click="_btnSelect_Click"
         IsDefault="True" />
      <ListBox
         Height="220"
         HorizontalAlignment="Left"
         Margin="12,12,0,0"
         Name="_lbDevices"
         VerticalAlignment="Top"
         Width="183" />
   </Grid>
</Window>
